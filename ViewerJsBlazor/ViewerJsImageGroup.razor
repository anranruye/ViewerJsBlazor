@inject IJSRuntime Js
@inherits ViewerJsComponentBase

<Element @ref=_element Type=@ElementType @attributes=AdditionalAttributes>
    <CascadingValue Value=this>
        @ChildContent
    </CascadingValue>
</Element>

@code {
    Element _element;

    protected override ElementReference ElementReference => _element.ElementRef;

    [Parameter]
    public string ElementType { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }
}
